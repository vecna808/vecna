IF
	Global("DrinksP","LOCALS",0)
THEN
	RESPONSE #100
		UseItem("POTN11",Myself) // Potion of Invulnerability
		SetGlobal("DrinksP","LOCALS",1)
		Continue()
END

IF
	Global("DrinksPot","LOCALS",0)
	HPLT(Myself,110)
THEN
	RESPONSE #100
		UseItem("NewPo01",Myself) // Elixir of Life
		SetGlobal("DrinksPot","LOCALS",1)
		Continue()
END

IF
	Global("DrinksPot","LOCALS",1)
	HPLT(Myself,100)
THEN
	RESPONSE #100
		UseItem("POTN52",Myself) // Potion of Extra Healing
		SetGlobal("DrinksPot","LOCALS",2)
		Continue()
END

IF
	Global("DrinksPot1","LOCALS",0)
	Global("DrinksPot","LOCALS",2)
	Delay(5)
THEN
	RESPONSE #100
		UseItem("POTN18",Myself) // Potion of Absorption
		SetGlobal("DrinksPot1","LOCALS",1)
		Continue()
END

IF
	Global("DrinksPot","LOCALS",2)
	HPLT(Myself,50)
THEN
	RESPONSE #100
		UseItem("POTN52",Myself) // Potion of Extra Healing
		SetGlobal("DrinksPot","LOCALS",3)
		Continue()
END


